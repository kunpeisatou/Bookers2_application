<!-- Boolers2 -->
<main>
   
   <div class='container'>
     <div class='row'>
       <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h2>User info</h2>
         <%= form_with model:@user, local:true do |f| %>
            <!--エラーメッセージここから-->
            <% if @user.errors.any? %>
              <div id="error_explanation">
                <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
           <!--エラーメッセージここまで-->
           
           <!-- ユーザ名 -->
           <div class="form-group">
             <label for="inputName">Name</label>
             <%= f.text_field :name, autofocus: true, id:"inputName", :class =>'form-control name'%>
           </div>
           <!-- 画像 -->
           <div class="form-group">
             <label for="inputImage">ProfileImage</label>
             <%= f.attachment_field :profile_image, placeholder: "プロフィール画像",:class =>"form-control-file user_image" %>
           </div>
           <!-- 説明 -->
           <div class="form-group">
             <label for="user_introduction">Introduction</label>
              <%= f.text_area :introduction,class:"form-control introduction" %>
           </div>
           <!-- 決定ボタン -->
           <div class="form-group">
             <%= f.submit "Update User", :class=>"btn btn-secondary"%>
           </div>
         <% end %>
     </div>
   </div>
</main>