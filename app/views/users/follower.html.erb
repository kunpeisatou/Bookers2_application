<main>
   <p id="notice"><%= flash[:notice] %></p>
   
       <div class='col-md-12'>
         <h2>Follow Users</h2>
         
         <table class='table'>
          <% if @users.empty? %>
              <thead>
                <p>ユーザーはいません</p>
              </thead>
          <% else %>
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                   <% @users.each do |user| %>
                   <tr>
                     <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
                     <td><%= user.name %></td>
                     <td><%= "フォロー数：#{user.followers.count}" %></td>
                     <td><%= "フォロワー数：#{user.followeds.count}" %></td>
                     <td><%= link_to"Show",user_path(user.id) %></td>
                   </tr>
                   <% end %>
                
              </tbody>
          <% end %>
         </table>
       </div>
</main>